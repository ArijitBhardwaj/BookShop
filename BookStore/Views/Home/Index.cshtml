@model IEnumerable<BookStore.Models.Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f7f3f1; /* Subtle brownish background */
            font-family: Arial, sans-serif;
        }

        /* App title */
        .app-title {
            text-align: center;
            font-size: 3rem;
            font-weight: bold;
            color: #5b3a29;  /* Dark brown */
            margin-top: 20px;
        }

        /* Search bar */
        .search-bar {
            text-align: center;
            margin-bottom: 20px;
        }

        .search-input {
            padding: 10px;
            font-size: 1rem;
            width: 300px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .search-button {
            padding: 10px;
            background-color: #5b3a29;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 1rem;
        }

        .search-button:hover {
            background-color: #8b5a2b;
        }

        /* Book tiles layout using CSS Grid */
        .book-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);  /* 4 columns by default */
            gap: 20px;
            margin-top: 30px;
            padding: 0 15px;
        }

        .book-card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            text-align: center;
            transition: transform 0.2s ease;
        }

        .book-card:hover {
            transform: translateY(-5px);  /* Hover effect */
        }

        .book-card img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }

        .book-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #5b3a29;
            margin: 10px 0;
        }

        .book-author {
            color: #8b5a2b;
            margin-bottom: 15px;
        }

        .book-price {
            color: #5b3a29;
            font-size: 1.1rem;
        }

        .view-details-btn {
            padding: 8px 16px;
            background-color: #5b3a29;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .view-details-btn:hover {
            background-color: #8b5a2b;
        }

        /* Flexible Layout for Smaller Screens */
        .book-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));  /* 1 to 4 columns based on screen size */
        }

        .book-grid .book-card {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="app-title">
        BookShop
    </div>

    <!-- Search bar -->
    <div class="search-bar">
        <form method="get" action="@Url.Action("Index", "Home")">
            <input type="text" name="query" class="search-input" placeholder="Search for books..." value="@ViewData["SearchQuery"]" />
            <button type="submit" class="search-button">Search</button>
        </form>
    </div>

    <!-- Book Grid Layout -->
    <div class="book-grid">
        @foreach (var book in Model)
        {
            <div class="book-card">
                <!-- Book image -->
                @if (book.VolumeInfo?.ImageLinks?.Thumbnail != null)
                {
                    <img src="@book.VolumeInfo.ImageLinks.Thumbnail" alt="@book.VolumeInfo.Title" />
                }
                else
                {
                    <img src="https://via.placeholder.com/150" alt="No image available" />
                }

                <div class="book-title">@book.VolumeInfo.Title</div>
                <p class="book-author">By: @string.Join(", ", book.VolumeInfo.Authors)</p>
                <p class="book-price">$@book.VolumeInfo.Price</p>

                <a href="@Url.Action("Details", "Book", new { id = book.Id })" class="view-details-btn">View Details</a>
            </div>
        }
    </div>
</body>
</html>
