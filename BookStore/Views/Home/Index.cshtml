@model IEnumerable<BookStore.Models.Book>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-3">
            <div class="card">
                @if (book.VolumeInfo.ImageLinks != null && !string.IsNullOrEmpty(book.VolumeInfo.ImageLinks.Thumbnail))
                {
                    <img src="@book.VolumeInfo.ImageLinks.Thumbnail" class="card-img-top" alt="@book.VolumeInfo.Title" />
                }
                else
                {
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="No Image Available" />
                }
                <div class="card-body">
                    <h5 class="card-title">@book.VolumeInfo.Title</h5>
                    <p class="card-text">@book.VolumeInfo.Description</p>
                    <p><strong>Price:</strong> $@book.VolumeInfo.Price</p>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
