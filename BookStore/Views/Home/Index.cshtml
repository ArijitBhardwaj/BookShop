@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f1e1;
            color: #4e3629;
        }

        h1 {
            font-family: 'Georgia', serif;
            font-size: 3em;
            text-align: center;
            color: #3d2a1f;
            margin-bottom: 20px;
        }

        .book-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* Four columns per row */
            gap: 20px;
            margin-top: 20px;
            padding: 0 10%;
        }

        .book-card {
            background-color: #d6c1a1;
            border-radius: 10px;
            padding: 15px;
            height: 100%;
        }

        .book-title {
            font-weight: bold;
            font-size: 18px;
            color: #3d2a1f;
        }

        .book-description {
            font-size: 14px;
            color: #5e4429;
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }

        .btn {
            background-color: #8e5c34;
            color: white;
            padding: 8px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #5a3d23;
        }

        .search-container {
            text-align: center;
        }

        .search-input {
            padding: 10px;
            font-size: 16px;
            width: 300px;
            border-radius: 5px;
            border: 1px solid #d1a15d;
        }

        .book-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        }
    </style>
</head>
<body>
    <h1>BookShop</h1>

    <div class="search-container">
        <form method="get" action="/Home/Index">
            <input type="text" name="query" class="search-input" placeholder="Search for books..." />
            <button type="submit" class="btn">Search</button>
        </form>
    </div>

    <div class="book-grid">
        @foreach (var book in Model)
        {
            <div class="book-card">
                @if (book.VolumeInfo?.ImageLinks?.Thumbnail != null)
                {
                    <img src="@book.VolumeInfo.ImageLinks.Thumbnail" class="card-img-top" alt="@book.VolumeInfo.Title" />
                }
                else
                {
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="No image available" />
                }

                <div class="card-body">
                    <h5 class="book-title">@book.VolumeInfo.Title</h5>
                    <p class="book-description">By: @string.Join(", ", book.VolumeInfo?.Authors ?? new string[] { "Unknown Author" })</p>
                    <p><strong>Price:</strong> $@book.VolumeInfo.Price</p>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn">View Details</a>
                </div>
            </div>
        }
    </div>
</body>
</html>
